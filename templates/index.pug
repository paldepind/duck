doctype html
html(lang="en")
  head
    title List documentation
    meta(name="viewport" content="width=device-width")
    link(rel="stylesheet" href="style.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
    script(type="text/javascript", src="script.js", async)
  body
    .container
      aside.sidebar
        #menu.fixed.sidebar-follow
          div.search-box
            i.fa.fa-search
            input#search(placeholder="Search")
          ul
            each val in data
              li(data-name=`${val.name}`): a(href=`#${val.name}`)= val.name
      section.content
        each val in data
          case val.sort
            when 'function'
              .element
                div.signature(id=val.name)
                  div.name
                    a.section-anchor(href=`#${val.name}`) #
                    | #{val.name}
                  div
                    each signature in val.signatures
                      div.type= signature.type
                .doc-body
                  != md(val.documentation)
                  if val.tags.example
                    pre.language-typescript
                      code
                        != highlight(val.tags.example)
            when 'variable'
              .element
                div.signature(id=val.name)
                  span.name
                    a.section-anchor(href=`#${val.name}`) #
                    | #{val.name}
                  span.type= val.type
                .doc-body
                  != md(val.documentation)
                  if val.tags.example
                    pre.language-typescript
                      code
                        != highlight(val.tags.example)
            when 'class'
              .element
                .signature(id=val.name)
                  span.name
                    a.section-anchor(href=`#${val.name}`) #
                    | #{val.name}
                .doc-body
                  != md(val.documentation)
                .properties
                  each p in val.properties
                    .element
                      div.signature(id=p.name)
                        span.name
                          a.section-anchor(href=`#${p.name}`) #
                          | #{p.name}
                        span.type= p.type
                      .doc-body
                        != md(p.documentation)
                        if p.tags.example
                          pre.language-typescript
                            code
                              != highlight(p.tags.example)
